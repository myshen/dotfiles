# collecting data for vim-croquet http://www.drbunsen.org/vim-croquet/
alias vi='vim -w ~/.vimlog "$@"'
alias vim='vim -w ~/.vimlog "$@"'

# protection
alias rm='rm -i'
alias cp='cp -iv'
alias mv='mv -i'
alias halt='echo "Really? Halt?"'
alias reboot='echo "Really? Reboot?"'

# customization
alias ..='cd ..'
alias ...='..;..'
alias dirs='dirs -v'
alias ls='ls -lah --color'
alias cdl='cd;ls'
alias clr='clear'
alias cls='clear;ls'
alias mkdir='mkdir -p'
alias less='less --RAW-CONTROL-CHARS -i'
alias lessf='less --RAW-CONTROL-CHARS --follow-name -i +F'
alias kint='kill -INT'
alias kterm='kill -TERM'
alias murder='kill -KILL'

alias tree='ls -lR'
alias path='echo -e ${PATH//:/\\n}'
alias as='sudo -u'

# Spelling
alias ngninx='nginx'
alias hisotry='history'
alias gs='echo "Did you mean ghost?"'
alias ghost="'gs'"
alias suod='sudo'
alias sl='ls'
alias pusdh='pushd'
alias qfg='fg'
alias fgfg='fg'

# Shortcuts
alias pbrew='perlbrew'
alias nose="nosetests"
alias max="osascript ~/Library/Scripts/KBmaximize.scpt"

alias proj='vim ~/.project'

alias gco='git co'
alias gst='git st'
alias gdh='git diff --no-ext-diff HEAD'
alias gdiff='git diff --no-ext-diff'
alias gitk='gitk --all &'
alias glg='git lg'

source_file_if_exists "${HOME}/.dotfiles/docker/aliases"
